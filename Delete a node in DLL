/*

Definition for doubly Link List Node
class Node {
    int data;
    Node next;
    Node prev;

    Node(int val) {
        data = val;
        next = null;
        prev = null;
    }
}
*/
class Solution {
    public Node deleteNode(Node head, int x) {
        // code here
        if(head.next==null)
        return null;
        
        if(x==1){
            head=head.next;
            head.prev=null;
            return head;
        }
        
        Node temp=head;
        int count=1;
        while(count<x && temp!=null){
            count++;
            temp=temp.next;
        }
        
        if(temp.next==null)
        temp.prev.next=null;
        else{
        temp.prev.next=temp.next;
        temp.next.prev=temp.prev;
        }
        
        return head;
    }
}
